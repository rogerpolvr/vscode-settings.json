{
  // Configurações Pessoais
  "editor.mouseWheelZoom": true,
  "editor.fontSize": 16,
  "window.titleBarStyle": "custom",
  "editor.minimap.enabled": false,
  "workbench.iconTheme": "material-icon-theme",

  // Font e Font Ligatures
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,

  // Não agrupa pastas vazias - File explorer
  "explorer.compactFolders": false,

  // AutoComplete do HTML dentro do JavaScript (JSX)
  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": {
    " javascript": "javascriptreact"
  },
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.colorTheme": "Horizon Bold",

  //Evita que o VSCode tente corrigir importações automaticamente
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",

  //Tamanho da linha de código
  "editor.rulers": [80, 120],

  //Evita que o editor adicione cores em variáveis de acordo com seu tipo,
  // Permanece apenas as cores padrões do tema.
  "editor.semanticHighlighting.enabled": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Formata o código ao salvar o arquivo.
  "editor.formatOnSave": true
}
